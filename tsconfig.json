{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "removeComments": true,
        "strict": true,
        "outDir": "./out"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "out",
        "project"
    ]
}